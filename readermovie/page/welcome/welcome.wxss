page{
  height: 100%;
  background-color: #b3d4db;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b3d4db;
}

.user-avatar{
  width: 300rpx;
  height: 300rpx;
  margin-top: 150rpx;
}

.user-name{
  margin-top: 100rpx;
  font-size: 50rpx;
  font-weight: bold;
}

.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 350rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}