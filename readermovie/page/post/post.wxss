/* page/posts/post.wxss */
.swiper{
  width:100%;
  height: 600rpx
} 
.post_container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post_container1{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post_author_date{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.post_author{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.post_date{
  margin-top: 100px;
  margin-left: 100rpx;
  margin-bottom: 5px;
  font-size: 20rpx;
}
.post_title{
  font-size: 50rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post_image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post_content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post_like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post_like_image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post_like-font{
  vertical-align: middle;
  margin-right: 20px;
}
